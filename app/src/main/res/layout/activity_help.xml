<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="ActivityHelpBinding">

        <import type="android.support.v7.widget.RecyclerView.LayoutManager"/>

        <variable
            name="layoutManager"
            type="LayoutManager"/>
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sorcerer.sorcery.iconpack.ui.activities.HelpActivity">

        <include
            android:id="@+id/include4"
            layout="@layout/toolbar_universal"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/include4"
            app:layoutManager="@{layoutManager}">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</layout>