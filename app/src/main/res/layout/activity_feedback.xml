<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sorcerer.sorcery.iconpack.ui.activities.FeedbackActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_feedback"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_feedback"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_above="@+id/textView_feedback_explain">

        <Button
            android:id="@+id/button_request"
            style="@style/FeedbackRaisedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="32dp"
            android:text="@string/request"/>

        <Button
            android:id="@+id/button_suggest"
            style="@style/FeedbackRaisedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="32dp"
            android:text="@string/suggest"/>

    </LinearLayout>

    <TextView
        android:text="If you are unable to send mail by phone\n it's my email address \n feedback@sorcererxw.com \n (press to copy)"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView_feedback_explain"/>
</RelativeLayout>
