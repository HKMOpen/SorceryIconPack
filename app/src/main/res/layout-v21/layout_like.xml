<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal">

    <FrameLayout

        android:id="@+id/frameLayout_icon_dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/imageView_icon_dislike"
            android:layout_width="@dimen/dialog_like_size"
            android:layout_height="@dimen/dialog_like_size"
            android:background="@drawable/ic_dislike"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout_icon_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="24dp"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/imageView_icon_like"
            android:layout_width="@dimen/dialog_like_size"
            android:layout_height="@dimen/dialog_like_size"
            android:background="@drawable/ic_like"/>
    </FrameLayout>

</LinearLayout>